<div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_with model: @user ,url: login_path, method: :post ,local:true do |f|  %>
         <%= f.label :email %>
         <%= f.text_field :email, placeholder: "Enter email", :class=> "form-control" %>
         <%= f.label :password %>
         <%= f.password_field :password, placeholder: "Enter password",:class=> "form-control" %>  
    
         <%= f.submit "Login", class: "btn btn-primary" %>    
      <% end %>

      <p> New user? <%= link_to "sing up now",signup_path %></p>
    </div>
</div>