<div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_with scope: :users ,url: users_path, method: :post ,local:true do |f|  %>
        <div  class= "make-color"  >
        <% if @user.errors.any? %>
          <% @user.errors.full_messages.each do |msg| %>
              <%= msg %>
            <br>
          <% end %>
        <% end%>
        </div>
         <%= f.label :name %>
         <%= f.text_field :name, placeholder: "Enter name",:class=> "form-control" %>  
         <%= f.label :email %>
         <%= f.text_field :email, placeholder: "Enter email", :class=> "form-control" %>
         <%= f.label :password %>
         <%= f.password_field :password, placeholder: "Enter password",:class=> "form-control" %>  
         <%= f.label :password_confirm %>
         <%= f.password_field :password_confirmation, placeholder: "Enter password again",:class=> "form-control" %>  
    
         <%= f.submit "Create my account", class: "btn btn-primary" %>    
    
      <% end %>
    </div>
</div>